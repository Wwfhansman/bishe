/* components/chat-display/index.wxss */
.chat-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  min-height: 120rpx;
}

.message-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.message-wrapper.fade-in {
  opacity: 1;
  transform: translateY(0);
}

.role-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.message-text {
  font-size: 34rpx;
  color: var(--text-primary);
  text-align: center;
  font-weight: 500;
  line-height: 1.4;
}

/* Optional: Different styles for User vs AI if needed */
.message-wrapper.ai .message-text {
  /* background: linear-gradient(90deg, #007AFF, #5856D6); */
  /* -webkit-background-clip: text; */
  /* -webkit-text-fill-color: transparent; */
  /* Gradient text support in MP can be tricky, sticking to solid for clarity */
  color: var(--text-primary);
}
